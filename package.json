{
  "name": "task-tracker",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "bun run build:cli && bun run build:ui",
    "build:cli": "bun build packages/cli/src/cli.ts --outdir packages/cli/dist --target bun",
    "build:ui": "cd packages/ui && bun run build",
    "cli": "bun run packages/cli/src/cli.ts",
    "link": "cd packages/cli && bun link && ln -sfn $(pwd)/../skills/skills/tracker-plan ~/.claude/skills/tracker-plan",
    "ui": "bun run packages/ui/server/index.ts",
    "ui:dev": "cd packages/ui && bun run dev"
  }
}
